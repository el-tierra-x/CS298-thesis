        {5}{{{\color{JS-number}5}}}{1}
        {6}{{{\color{JS-number}6}}}{1}
        {7}{{{\color{JS-number}7}}}{1}
        {8}{{{\color{JS-number}8}}}{1}
        {9}{{{\color{JS-number}9}}}{1}
        {:}{{{\color{JS-punct}:}}}{1}
        {,}{{{\color{JS-punct},}}}{1}
        {\{}{{{\color{JS-obj-brace}{\{}}}}{1}
        {\}}{{{\color{JS-obj-brace}{\}}}}}{1}
        {[}{{{\color{JS-lst-brace}{[}}}}{1}
        {]}{{{\color{JS-lst-brace}{]}}}}{1},
}